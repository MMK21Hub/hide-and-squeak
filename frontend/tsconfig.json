{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],

    /* Bundler (Vite) stuff */
    "moduleResolution": "bundler",
    "noEmit": true,

    /* Voby stuff */
    "jsx": "preserve",
    "jsxImportSource": "voby",
    "types": ["vite/client"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
